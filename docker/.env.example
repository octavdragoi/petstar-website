# Strapi Environment Variables
# Copy this file to .env and update with your own values

# Strapi Secrets (generate random strings for production)
ADMIN_JWT_SECRET=generate-a-random-secret-here
APP_KEYS=generate-comma-separated-keys-here
API_TOKEN_SALT=generate-a-random-salt-here
JWT_SECRET=generate-a-random-jwt-secret-here

# Database (default is SQLite, change for production)
DATABASE_CLIENT=sqlite
DATABASE_FILENAME=.tmp/data.db

# For PostgreSQL (production recommended):
# DATABASE_CLIENT=postgres
# DATABASE_HOST=postgres
# DATABASE_PORT=5432
# DATABASE_NAME=strapi
# DATABASE_USERNAME=strapi
# DATABASE_PASSWORD=strapi
# DATABASE_SSL=false

# Server
NODE_ENV=production
HOST=0.0.0.0
PORT=1337

# CORS Configuration
# STRAPI_CORS_ENABLED=true
# STRAPI_CORS_ORIGIN=http://localhost:8081,http://127.0.0.1:8081
