{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "singularName": "article",
    "pluralName": "articles",
    "displayName": "Article"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "excerpt": {
      "type": "string",
      "maxLength": 200
    },
    "content": {
      "type": "blocks",
      "required": true
    },
    "images": {
      "type": "media",
      "multiple": true,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "author": {
      "type": "string"
    },
    "category": {
      "type": "enumeration",
      "default": "Press Release",
      "enum": [
        "Press Release",
        "Innovation",
        "Sustainability",
        "Company News"
      ]
    },
    "featured": {
      "type": "boolean",
      "default": false
    },
    "Language": {
      "type": "enumeration",
      "default": "ro",
      "enum": [
        "en",
        "ro"
      ]
    }
  }
}
